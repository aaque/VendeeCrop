@model VendeeCrop.Models.FarmerModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Farmer Login</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='https://fonts.googleapis.com/css?family=Permanent+Marker' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Raleway:500,700' rel='stylesheet' type='text/css'>
    <meta name="viewport" content="width=device-width" />
</head>
<body class="body-buyer">


    <div class="login-container col-md-6">
        @using (Html.BeginForm("LoginNow", "FarmerModels"))
        {
            <div class="site-title col-md-12">
                Vendee Crop (Farmer)
            </div>
            <div class="login-controls col-md-12">
                <div class="center-inside form-group">
                    @Html.TextBox("txtPhoneNumber", null, new { @class = "form-control", @placeholder = "Phone Number" })
                </div>
            </div>
            <div class="login-controls col-md-12">
                <div class="center-inside form-group">
                    @Html.TextBox("txtPassword", null, new { @class = "form-control", @type = "password", @placeholder = "•••••••" })
                </div>
            </div>
            <div id="lblErrorLogin" class="col-md-12" style="text-align:center;color:red;font-size:.8em;">@Session["ErrorLogin"]</div>

            <input type="submit" value="Login" class="btn btn-default" />
        }
        <div class="col-md-12"> @Html.ActionLink("No account yet? Register here.", "Create", "FarmerModels")</div>
        <div class="col-md-12"> @Html.ActionLink("I am not a farmer.", "LoginIndex", "Home")</div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript">
        $("#txtPhoneNumber,#txtPassword").change(function () {
            $("#lblErrorLogin").html("");
        });

    </script>
</body>

</html>
