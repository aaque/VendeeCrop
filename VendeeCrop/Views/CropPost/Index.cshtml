@model IEnumerable<VendeeCrop.Models.CropPostModel>

@{
    ViewBag.Title = "Index";
    var IsAdmin = ((VendeeCrop.Models.UserModel)Session["UserModel"]).Type == "Admin" || Request.IsAuthenticated;
}


<div class="container" style=" justify-content:center;align-content:center;">
    @foreach (var item in Model)
    {
        <div class="row" style="padding-top:15px;display:flex; align-content: center; justify-content: center;">
            <div class="col-xs-12 col-md-8" style="background-color:white;padding:5px;">
                
                <span style="font-size:2em;font-weight:bold;word-wrap:break-word">
                    <span style="font-size:1em;float:right;top:0;padding-left:15px;">
                        <a href="@Url.Action("Index","CropPostDetail",routeValues: new { id = item.CropPostId })"><i class="glyphicon glyphicon-eye-open"></i></a>
                        <a href="@Url.Action("Edit",routeValues: new { id = item.CropPostId })"><i class="glyphicon glyphicon-edit"></i></a>
                        <a href="@Url.Action("Delete",routeValues: new { id = item.CropPostId })"><i class="glyphicon glyphicon-trash"></i></a>
                    </span>

                    @item.Title
                </span><span style="font-size:.7em;">(@item.Created)</span>

            </div>
        </div>
        
    }
</div>

